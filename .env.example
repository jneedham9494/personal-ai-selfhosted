# Application
APP_NAME="Personal AI Assistant"
DEBUG=true
PORT=8000

# Database
DATABASE_URL="sqlite:///./backend/data/dev.db"

# Obsidian - Update with your vault path
OBSIDIAN_VAULT_PATH="/path/to/your/obsidian/vault"

# LLM
OLLAMA_HOST="http://localhost:11434"
DEFAULT_MODEL="qwen2.5-coder:7b"

# Security (generate new secrets for production!)
JWT_SECRET="change-this-to-a-secure-random-string"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION=3600

# Features
ENABLE_COMMANDS=true
ENABLE_HOOKS=true
ENABLE_AGENTS=true
ENABLE_TOOLS=true

# Telegram Bot (optional - for mobile interface)
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""

# Claude API (optional - alternative to Ollama)
ANTHROPIC_API_KEY=""

# Nudging (proactive reminders)
NUDGING_ENABLED=true
NUDGING_HOURS_START=8
NUDGING_HOURS_END=22
NUDGING_MAX_PER_DAY=5

# 1Password (optional - for credential management)
USE_1PASSWORD=false
